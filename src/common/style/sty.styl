$red = #E91E63
.container
  margin 0 auto
  min-width 1000px
  max-width 1400px
.flex
  display flex
.expend
  flex 1 0 auto
.justify-center
  justify-content center
.justify-start
  justify-content flex-start
.justify-end
  justify-content flex-end
.justify-between
  justify-content space-between
.justify-around
  justify-content space-around
.align-center
  align-items center
.align-start
  align-items flex-start
.align-end
  align-items flex-end
.align-stretch
  align-items stretch
.direction-column
  flex-direction column
.flex-wrap
  flex-wrap wrap
html,body
  margin 0
  padding 0
*
  box-sizing content-box
h1
  font-size: .4rem;
h2,h3,h4
  font-weight normal
  font-size .2rem
li
  list-style none
.block
  display block
.ellipse
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
.right-line
  position relative
  &:before
    content ''
    height 100%
    width 1px
    transform scaleX(.5)
    position absolute
    right 0
    top 0
    background rgba(0,0,0,.05)
div a
  color inherit
  &:hover
    color inherit
.hidden
  overflow hidden
.img-box img
  width 100%
  height 100%
  display block
.img-scale-hover&:hover .img-scale
  img
    transform scale(1.1)
.img-scale
  overflow hidden
  img
    transition all .3s
.text-hv:hover
  color #E60026 !important
  border-color #E60026 !important
.absolute-center
  position absolute
  top 50%
  left 50%
  transform translate(-50%,-50%)
.relative
  position relative
i
  font-style normal
.button
  cursor pointer
  padding 7px 18px
  border-radius 18px
  border 1px #666 solid
  text-align center
  &.active
    background $red
    color #fff
    border-color $red
.img
  img
    width 100%
    height 100%